@model LoginViewModel

@{
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/registeration/css/site.css" rel="stylesheet" />

</head>
<body>
    <div class="login-box">
        <h2>Login</h2>
        <form method="post">
            <div class="user-box">
                <input type="text" asp-for="Username" required="" />
                <label>Username</label>
            </div>
           
            <div class="user-box">
                <input type="password" asp-for="Password" required />
                <label>Password</label>
            </div>
            <label>@TempData["LoginError"]</label>
            <div style="display:block;justify-content:space-around">
                <button type="submit" style="border:none;background-color:transparent;cursor:pointer">
                    <a>
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        Login
                    </a>
                </button>
                <a style="font-size:10px !important" asp-action="Register" asp-controller="Register" asp-area="Guest">
                    Bir Hesabınız Yok Mu?
                </a>
            </div>
        </form>
    </div>
</body>
</html>
