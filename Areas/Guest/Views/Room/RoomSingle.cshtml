@model Room
@{
    ViewData["Title"] = "RoomSingle";
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";
}

<div id="background" data-bgimage="url(/Templates/seaside/images/background/4.jpg) fixed"></div>
<div id="content-absolute">

    <!-- subheader -->
    <section id="subheader" class="no-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h4>@Model.Name</h4>
                    <h1>Suite</h1>
                </div>
            </div>
        </div>
    </section>

    <section id="section-main" class="no-bg no-top" aria-label="section-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="de-content-overlay">
                        <div class="d-carousel wow fadeInRight" data-wow-delay="2s">
                            <div id="carousel-rooms" class="owl-carousel owl-theme">
                                @foreach (var image in Model.Images)
                                {
                                <div class="item">
                                    <div class="picframe">
                                        <a class="image-popup-gallery" href="@image.Image">
                                            <span class="overlay">
                                                <span class="pf_title">
                                                    <i class="icon_search"></i>
                                                </span>
                                                <span class="pf_caption">
                                                    @image.Description
                                                </span>
                                            </span>
                                        </a>

                                            <img src="@image.Image" alt="">
                                    </div>
                                </div>
                                }
                            </div>

                            <div class="d-arrow-left mod-a"><i class="fa fa-angle-left"></i></div>
                            <div class="d-arrow-right mod-a"><i class="fa fa-angle-right"></i></div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-room-details de-flex">
                                    <div class="de-flex-col">
                                        <img src="~/Templates/seaside/images/ui/user.svg" alt="">@Model.Capacity Guests
                                    </div>
                                    <div class="de-flex-col">
                                        <img src="~/Templates/seaside/images/ui/floorplan.svg" alt="">@Model.RoomSize
                                    </div>
                                    <div class="de-flex-col">
                                        <img src="~/Templates/seaside/images/ui/bed.svg" alt="">$@Model.Price / Night
                                    </div>
                                    <div class="de-flex-col">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                        <a asp-area="Guest" asp-controller="Booking" asp-action="Index" asp-route-id="@Model.Id" class="btn-main"><span>Book Now</span></a>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h3>Room Overview</h3>
                                <p> @Model.Overview</p>
                            </div>
                            <div class="col-md-4">
                                <h3>Room Facilities</h3>
                                <ul class="ul-style-2">
                                    @foreach (var item in @Model.RoomFacilities)
                                    {
                                    <li>@item.Facility.Name</li>
                                    }

                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- subheader close -->
    <partial name="_LayoutPartial/_FooterPartial" />
</div>
