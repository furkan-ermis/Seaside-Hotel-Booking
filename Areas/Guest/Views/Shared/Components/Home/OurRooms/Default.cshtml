@model List<Room>
<section class="jarallax">
    <img src="~/Templates/seaside/images/background/7.jpg" class="jarallax-img" alt="" />
    <div class="container">
        <div class="row gx-4">
            <div class="col-lg-12 text-center">
                <h2 class="title center">
                    Our Rooms
                    <span class="small-border"></span>
                </h2>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="de-room">

                        <div class="d-image">
                            <div class="d-label">@item.RoomLeft rooms</div>
                            <div class="d-details">
                                <span class="d-meta-1">
                                    <img src="~/Templates/seaside/images/ui/user.svg" alt="">@item.Capacity Guests
                                </span>
                                <span class="d-meta-2">
                                    <img src="~/Templates/seaside/images/ui/floorplan.svg" alt="">@item.RoomSize
                                </span>
                            </div>
                            <a asp-area="Guest" asp-controller="Room" asp-action="RoomSingle" asp-route-id="@item.Id">
                                <img src="@item.Images[0].Image" class="img-fluid" alt="">
                            </a>
                        </div>

                        <div class="d-text">
                            <h3>@item.Name</h3>
                            <p>@(item.Overview.Length > 140 ? item.Overview.Substring(0, 140) + "..." : item.Overview)</p>
                            <a asp-area="Guest" asp-controller="Room" asp-action="RoomSingle" asp-route-id="@item.Id" class="btn-line"><span>Book Now For @item.Price ₺</span></a>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>