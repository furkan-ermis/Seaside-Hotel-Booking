@model Room
<div class="row align-items-center">
            <div class="col-lg-3 col-6">
                <div class="spacer-double sm-hide"></div>
                <img  style="height:370px; width:100%" src="@Model.Images[1].Image"
                     alt=""
                     class="wow fadeInUp"
                     data-wow-duration="1s" />
            </div>

            <div class="col-lg-3 col-6">
                <img src="@Model.Images[0].Image"
                     alt=""
                     style="height:340px; width:90%"
                     class="wow fadeInUp"
                     data-wow-duration="1.5s" />
            </div>

            <div class="col-lg-6 wow fadeIn">
                <div class="padding20">
                    <h2 class="title mb10">
                        The @Model.Name Experience<br />You'll Remember
                        <span class="small-border"></span>
                    </h2>

                    <p>
                        @Model.Overview
                    </p>

                    <a asp-action="RoomSingle" asp-controller="Room" asp-area="Guest" asp-route-id="@Model.Id" class="btn-line"><span>Book Now</span>s</a>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>